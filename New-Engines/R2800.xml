<piston_engine name="R-2800-59">
  <displacement unit="IN3"> 2800 </displacement>
  <cylinder-head-mass unit="LBS"> 70 </cylinder-head-mass>
  <maxmp unit="INHG">    56.0   </maxmp>
  <maxhp>              2500     </maxhp>
  <cycles>                4     </cycles>
  <bore unit="IN">        5.75  </bore>
  <stroke unit="IN">      6.00  </stroke>
  <cylinders>            18     </cylinders>
  <compression-ratio>     6.75  </compression-ratio>
  <bsfc>                  0.4   </bsfc>
  <volumetric-efficiency> 0.87 </volumetric-efficiency>
  <cooling-factor> 0.45 </cooling-factor>
  <idlerpm>             550 </idlerpm>
  <maxrpm>             2800 </maxrpm>
  <maxthrottle>           1.0 </maxthrottle>
  <minthrottle>           0.1 </minthrottle>
  <sparkfaildrop>         0.2 </sparkfaildrop>
  <numboostspeeds>        2   </numboostspeeds>
  <boostoverride>         1   </boostoverride>

  <ratedboost1>       8.15 </ratedboost1> <!-- 46.5 inHg -->
  <ratedpower1>    2335    </ratedpower1>
  <ratedrpm1>      2600    </ratedrpm1>
  <ratedaltitude1> 15000    </ratedaltitude1>

  <ratedboost2>        7.41 </ratedboost2> <!-- 45 inHg -->
  <ratedpower2>     1520    </ratedpower2>
  <ratedrpm2>       2600    </ratedrpm2>
  <ratedaltitude2> 30000    </ratedaltitude2>

  <takeoffboost>  10.85   </takeoffboost>   <!-- 52.0 inHg -->
</piston_engine>
