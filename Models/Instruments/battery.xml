<?xml version="1.0"?>
<PropertyList>

    <path>batt.ac</path>

    <animation>
        <type>rotate</type>
        <object-name>Batt.switch</object-name>
        <property>controls/electric/battery-switch</property>
        <factor>60</factor>
        <center>
            <x-m>0.002</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>1.0</z>
        </axis>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>Batt.nut</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-toggle</command>
                <property>controls/electric/battery-switch</property>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>controls/electric/engine/generator</property>
                <property>controls/electric/battery-switch</property>
            </binding>
            <binding>
                <command>property-toggle</command>
                <property>sim/sound/click</property>
            </binding>
        </action>
    </animation>

</PropertyList>
