<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>GearAndTrim.ac</path>
    <animation>
    <object-name>AileronTrim</object-name>
    <object-name>Bolts</object-name>
    <object-name>DustCovers</object-name>
    <object-name>LdgGearLever</object-name>
    <object-name>LeverKnob</object-name>
    <object-name>RudderTrim</object-name>
    <object-name>Tensioner</object-name>
    <object-name>TrimMount</object-name>
    <object-name>trimWheel</object-name>
  </animation>

  <type>material</type>
  <animation>
    <object-name>AileronTrim</object-name>
    <object-name>DustCovers</object-name>
    <object-name>LdgGearLever</object-name>
    <!--object-name>LeverKnob</object-name-->
    <object-name>RudderTrim</object-name>
    <object-name>Tensioner</object-name>
    <object-name>TrimMount</object-name>
    <object-name>TrimWheel</object-name>
    <emission>
     <factor-prop>/controls/lighting/cabin-norm</factor-prop>
            <red>0</red>
            <green>1</green>
            <blue>8</blue>
    </emission>
  </animation>
      <animation>
    <type>material</type>
    <object-name>LeverKnob</object-name>
    <emission>
     <factor-prop>/controls/lighting/cabin-norm</factor-prop>
            <red>10</red>
            <green>0</green>
            <blue>8</blue>
    </emission>
  </animation>

<!-- ################################################  AileronTrim ########################################## -->
  <animation>
    <type>rotate</type>
    <object-name>AileronTrim</object-name>
    <property>controls/flight/aileron-trim</property>
    <factor>120</factor>
    <axis>
      <x>0.0</x>
      <y>0.0</y>
      <z>1.0</z>
    </axis>
    <center>
     <x-m>-0.29049</x-m>
     <y-m>-0.38223</y-m>
     <z-m>0.19457</z-m>
   </center>
  </animation>

<!-- ################################################ LdgGearLever ###################################### -->
  <animation>
    <type>rotate</type>
    <object-name>Lever</object-name>
    <object-name>LeverKnob</object-name>
    <property>controls/gear/gear-down</property>
    <factor>-160</factor>
    <axis>
      <x>1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
    <center>
     <x-m>-0.36270</x-m>
     <y-m>-0.41280</y-m>
     <z-m>0.24081</z-m>
   </center>
  </animation>

<!-- ################################################### RudderTrim #######################################-->

 <animation>
	<type>rotate</type>
	<object-name>RudderTrim</object-name>
	<property>controls/flight/rudder-trim</property>
         <factor>90</factor>
	<axis>
		<x>0.0</x>
		<y>.0</y>
		<z>-1.0</z>
	</axis>
	<center>
		<x-m>-0.20539</x-m>
		<y-m>-0.38200</y-m>
		<z-m>0.18110</z-m>
	</center>
  </animation>

<!-- ################################################## TrimWheel #############################################  -->

  <animation>
	<type>rotate</type>
	<object-name>TrimWheel</object-name>
	<property>controls/flight/elevator-trim</property>
         <factor>360</factor>
	<axis>
		<x>0.0</x>
		<y>1.0</y>
		<z>0.0</z>
	</axis>
	<center>
		<x-m>-0.24712</x-m>
		<y-m>-0.36598</y-m>
		<z-m>0.14020</z-m>
	</center>
 </animation>

<!--#################################################" MMB Adjustment ############################################" -->
  <animation>
    <type>pick</type>
    <visible>true</visible>
    <object-name>AileronTrim</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>property-adjust</command>
        <property>controls/flight/aileron-trim</property>
        <step>0.01</step>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <visible>true</visible>
    <object-name>AileronTrim</object-name>
    <action>
      <button>1</button>
      <binding>
        <command>property-adjust</command>
        <property>controls/flight/aileron-trim</property>
        <step>-0.01</step>
      </binding>
    </action>
  </animation>

    <animation>
        <type>pick</type>
        <object-name>Lever</object-name>
        <object-name>LeverKnob</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-toggle</command>
                <property>controls/gear/gear-down</property>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>controls/gear/gear</property>
            </binding>
            <binding>
                <command>property-toggle</command>
                <property>sim/sound/click</property>
            </binding>
        </action>
    </animation>

  <animation>
    <type>pick</type>
    <visible>true</visible>
    <object-name>RudderTrim</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>property-adjust</command>
        <property>controls/flight/rudder-trim</property>
        <step>0.01</step>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <visible>true</visible>
    <object-name>RudderTrim</object-name>
    <action>
      <button>1</button>
      <binding>
        <command>property-adjust</command>
        <property>controls/flight/rudder-trim</property>
        <step>-0.01</step>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <visible>true</visible>
    <object-name>TrimWheel</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>property-adjust</command>
        <property>controls/flight/elevator-trim</property>
        <step>-0.01</step>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <visible>true</visible>
    <object-name>TrimWheel</object-name>
    <action>
      <button>1</button>
      <binding>
        <command>property-adjust</command>
        <property>controls/flight/elevator-trim</property>
        <step>0.01</step>
      </binding>
    </action>
  </animation>

</PropertyList>
