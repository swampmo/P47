                systems/armament/station4/released == 1
          </test>
          <output>inertia/pointmass-weight-lbs[3]</output>
     </switch>

     <!-- station 5 -->
     <switch name="systems/armament/station5/weight-control">
          <default value="inertia/pointmass-weight-lbs[4]"/>
