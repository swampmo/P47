<?xml version="1.0" encoding="iso-8859-1"?>

<PropertyList>

 
  <particlesystem>

    <name>smoke</name>

    <texture>smoke.png</texture>

	<condition>
		<equals>
      <property>engines/engine/cranking</property>
		<value>1</value>
		</equals>
    </condition>

    <offsets>
      <x-m>  0.000 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.000 </z-m>
      <roll-deg>    0.000 </roll-deg>
      <pitch-deg>  85.000 </pitch-deg>
      <heading-deg> 0.000 </heading-deg>
    </offsets>


    <emissive>false</emissive>
    <lighting>false</lighting>
    <align>billboard</align>	
    <attach>world</attach>		

    <placer>
      <type>point</type>		
    </placer>

    <shooter>
      <theta-min-deg>1</theta-min-deg>
      <theta-max-deg>2</theta-max-deg>
      <phi-min-deg>1</phi-min-deg>
      <phi-max-deg>2</phi-max-deg>
      <speed-mps>
        <value>5</value>
        <spread>0.1</spread>
      </speed-mps>
      <rotation-speed>
        <x-min-deg-sec>0</x-min-deg-sec>
        <y-min-deg-sec>0</y-min-deg-sec>
        <z-min-deg-sec>0</z-min-deg-sec>
        <x-max-deg-sec>1</x-max-deg-sec>
        <y-max-deg-sec>1</y-max-deg-sec>
        <z-max-deg-sec>1</z-max-deg-sec>
      </rotation-speed>
    </shooter>

    <counter>
      <particles-per-sec>
        <value>30</value>
        <spread>0.5</spread>
      </particles-per-sec>
    </counter>

    <particle>
      <start>
        <color>
          <red><value>0.6</value></red>
          <green><value>0.6</value></green>
          <blue><value>0.6</value></blue>
          <alpha><value>1</value></alpha>
        </color>
        <size>
          <value>0.2</value>
        </size>
      </start>
      <end>
        <color>
          <red><value>1</value></red>
          <green><value>1</value></green>
          <blue><value>1</value></blue>
          <alpha><value>0</value></alpha>
        </color>
        <size>
          <value>1.0</value>
        </size>
      </end>
      <life-sec>
        <value>1</value>
      </life-sec>
      <mass-kg>0.05</mass-kg>
      <radius-m>0.1</radius-m>
    </particle>
    
    <program>
      <fluid>air</fluid>         <!-- air / water -->
      <gravity>false</gravity>
      <wind>true</wind>
    </program>
    
  </particlesystem>

</PropertyList>