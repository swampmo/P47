<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>temp-oil-fuel.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>face</object-name>
    <object-name>visses</object-name>
    <object-name>needle1</object-name>
    <object-name>needle2</object-name>
    <object-name>needle3</object-name>
    <object-name>vitre</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/P47/Models/Effects/Glass/glass</inherits-from>
    <object-name>vitre</object-name>
  </effect>

  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>vitre</object-name>
  </effect>

  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>needle1</object-name>
    <object-name>needle2</object-name>
    <object-name>needle3</object-name>
    <emission>
      <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>needle1</object-name>
    <property>environment/temperature-deg-c</property>
    <interpolation>
      <!--entry><ind> -50 </ind><dep> -27 </dep></entry-->
      <entry><ind>   0 </ind><dep>   0 </dep></entry>
      <entry><ind>  50 </ind><dep>  33 </dep></entry>
      <entry><ind> 100 </ind><dep>  65 </dep></entry>
    </interpolation>
    <center>
      <x-m> 0.00000 </x-m>
      <y-m> 0.00000 </y-m>
      <z-m> 0.00273 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>needle2</object-name>
      <property>engines/engine/oil-temp-c</property>
  <interpolation>
   <entry><ind>0</ind><dep>0</dep></entry>
   <entry><ind>100</ind><dep>20</dep></entry>
   <entry><ind>180</ind><dep>50</dep></entry>
   <entry><ind>210</ind><dep>100</dep></entry>
   <entry><ind>250</ind><dep>111</dep></entry>
   <entry><ind>400</ind><dep>140</dep></entry>
   <entry><ind>590</ind><dep>160</dep></entry>
  </interpolation>
    <center>
      <x-m>  0.00000 </x-m>
      <y-m> -0.00707 </y-m>
      <z-m> -0.01228 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>needle3</object-name>
    <property>engines/engine/cyl-temp-c</property>
    <interpolation>
      <entry><ind>  0 </ind><dep>   0 </dep></entry>
      <entry><ind> 35 </ind><dep> 180 </dep></entry>
    </interpolation>
    <center>
      <x-m>  0.00000 </x-m>
      <y-m>  0.00707 </y-m>
      <z-m> -0.01228 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>
