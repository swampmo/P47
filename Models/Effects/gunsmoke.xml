<?xml version="1.0"?>

<PropertyList>

    <particlesystem>
        <name>gunsmoke</name>
        <texture>smoke.png</texture>
        <emissive>false</emissive>
        <lighting>false</lighting>

        <offsets>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </offsets>

        <condition>
            <property>controls/armament/trigger</property>
        </condition>

        <attach>world</attach>

        <placer>
            <type>point</type>
        </placer>

        <shooter>
            <theta-min-deg>25</theta-min-deg>
            <theta-max-deg>45</theta-max-deg>
            <phi-min-deg>-40</phi-min-deg>
            <phi-max-deg>40</phi-max-deg>
            <speed-mps>
                <value>1</value>
                <spread>0.5</spread>
            </speed-mps>
            <rotation-speed>
                <x-max-deg-sec>25</x-max-deg-sec>
                <x-min-deg-sec>-25</x-min-deg-sec>
                <y-max-deg-sec>25</y-max-deg-sec>
                <y-min-deg-sec>-25</y-min-deg-sec>
                <z-max-deg-sec>25</z-max-deg-sec>
                <z-min-deg-sec>-25</z-min-deg-sec>
            </rotation-speed>
        </shooter>

        <counter>
            <particles-per-sec>
                <value>15</value>
                <spread>0.5</spread>
            </particles-per-sec>
        </counter>

        <align>billboard</align>

        <particle>
            <start>
                <color>
                    <red>
                        <value>0.90</value>
                    </red>
                    <green>
                        <value>0.90</value>
                    </green>
                    <blue>
                        <value>0.95</value>
                    </blue>
                    <alpha>
                        <value>0.2</value>
                    </alpha>
                </color>
                <size>
                    <value>0.5</value>
                </size>
            </start>
            <end>
                <color>
                    <red>
                        <value>0.5</value>
                    </red>
                    <green>
                        <value>0.5</value>
                    </green>
                    <blue>
                        <value>0.5</value>
                    </blue>
                    <alpha>
                        <value>0.00</value>
                    </alpha>
                </color>
                <size>
                    <value>2</value>
                </size>
            </end>
            <life-sec>
                <value>0.1</value>
            </life-sec>
            <mass-kg>0.025</mass-kg>
            <radius-m>0.175</radius-m>
        </particle>

        <program>
            <fluid>air</fluid>
            <gravity>false</gravity>
            <wind>true</wind>
        </program>

    </particlesystem>

</PropertyList>
