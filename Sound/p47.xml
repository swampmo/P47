<?xml version="1.0"?>
<PropertyList>

<fx>

<!-- Engine 1 -->
    <crank>
        <name>crank1</name>
        <mode>looped</mode>
        <path>Aircraft/P47/Sound/starter.wav</path>
        <condition>
            <property>engines/engine[0]/cranking</property>
            <not>
                <property>engines/engine[0]/running</property>
            </not>
        </condition>
        <volume>
            <property>engines/engine[0]/cranking</property>
        </volume>
        <position><!-- +X = back / +Y = left / +Z = up-->
            <x>3.5</x>
            <y>0</y>
            <z>0</z>
        </position>
        <reference-dist>20.0</reference-dist>
        <max-dist>50.0</max-dist>
    </crank>

    <energizer>
    <name>energizer</name>
        <mode>looped</mode>
        <path>Aircraft/P47/Sound/energizer.wav</path>
                <property>engines/engine/energizer</property>
        <pitch>
            <property>engines/engine/energizer</property>
            <offset>0.5</offset>
            <factor>1.5</factor>
        </pitch>
        <position><!-- +X = back / +Y = left / +Z = up-->
            <x>3.5</x>
            <y>0</y>
            <z>0</z>
        </position>
        <reference-dist>2.0</reference-dist>
        <max-dist>5.0</max-dist>
    </energizer>

    <crank>
        <name>cough1</name>
        <path>Aircraft/P47/Sound/startup.wav</path>
        <property>engines/engine[0]/running</property>
        <volume>
            <property>engines/engine[0]/running</property>
            <max>0,5</max>
        </volume>
        <position>
            <x>3.5</x>
            <y>0</y>
            <z>0</z>
        </position>
        <reference-dist>20.0</reference-dist>
        <max-dist>50.0</max-dist>
    </crank>

    <engine>
        <name>idle</name>
        <mode>looped</mode>
        <path>Aircraft/P47/Sound/idle.wav</path>
        <condition>
            <greater-than>
                <property>engines/engine/rpm</property>
                <value>10</value>
            </greater-than>
        </condition>
        <volume>
            <property>sim/sound/idle</property>
        </volume>
        <pitch>
            <property>engines/engine/rpm</property>
            <offset>0</offset>
            <factor>0.000666</factor>
        </pitch>
        <position>
            <x>3.5</x>
            <y>0</y>
            <z>0</z>
        </position>
        <reference-dist>20.0</reference-dist>
        <max-dist>50.0</max-dist>
    </engine>

    <engine>
        <name>engine1_running</name>
        <mode>looped</mode>
        <path>Aircraft/P47/Sound/doublewasp.wav</path>
        <condition>
            <property>engines/engine[0]/running</property>
        </condition>
        <volume>
            <property>engines/engine[0]/mp-inhg</property>
            <factor>0.026</factor>
            <offset>0.2</offset>
        </volume>
        <pitch>
            <property>engines/engine[0]/mp-inhg</property>
            <offset>0.2</offset>
            <factor>0.033</factor>
            <min>0.10</min>
            <max>1.2</max>
        </pitch>
        <position>
            <x>-3.10</x>
            <y>8.35</y>
            <z>-0.3</z>
        </position>
        <reference-dist>150.0</reference-dist>
        <max-dist>500.0</max-dist>
    </engine>

    <rumble>
        <name>rumble</name>
        <mode>looped</mode>
        <path>Sounds/rumble.wav</path>
        <condition>
            <or>
                <property>gear/gear[0]/wow</property>
                <property>gear/gear[1]/wow</property>
                <property>gear/gear[2]/wow</property>
            </or>
        </condition>
        <volume>
            <property>velocities/groundspeed-kt</property>
            <factor>0.005</factor>
        </volume>
        <position>
            <x>0.0</x>
            <y>0</y>
            <z>-3</z>
        </position>
        <reference-dist>5.0</reference-dist>
        <max-dist>10.0</max-dist>
    </rumble>

    <gear>
        <name>gear</name>
        <mode>in-transit</mode>
        <path>Sounds/gear.wav</path>
        <property>gear/gear[0]/position-norm</property>
        <pitch>
            <internal>dt_play</internal>
            <offset>1.0</offset>
            <factor>-0.001</factor>
        </pitch>
        <position>
            <x>0</x>
            <y>0</y>
            <z>-2</z>
        </position>
        <reference-dist>5.0</reference-dist>
        <max-dist>10.0</max-dist>
    </gear>

    <gear>
        <name>gear-lock</name>
        <path>Sounds/gear-lck.wav</path>
        <condition>
            <equals>
                <property>gear/gear[0]/position-norm</property>
                <value>0</value>
            </equals>
        </condition>
        <position>
            <x>0</x>
            <y>0</y>
            <z>-2</z>
        </position>
        <reference-dist>5.0</reference-dist>
        <max-dist>10.0</max-dist>
    </gear>

    <squeal>
        <name>squeal</name>
        <path>Sounds/squeal.wav</path>
        <condition>
            <or>
                <property>gear/gear[0]/wow</property>
                <property>gear/gear[1]/wow</property>
                <property>gear/gear[2]/wow</property>
            </or>
        </condition>
        <volume>
            <property>velocities/speed-down-fps</property>
            <factor>0.05</factor>
        </volume>
        <volume>
            <property>velocities/airspeed-kt</property>
            <factor>0.02</factor>
        </volume>
        <volume>
            <internal>dt_stop</internal>
            <factor>0.05</factor>
            <max>1.0</max>
        </volume>
        <pitch>
            <property>velocities/airspeed-kt</property>
            <factor>0.0025</factor>
            <offset>1.2</offset>
        </pitch>
        <position>
            <x>0.0</x>
            <y>0</y>
            <z>-2</z>
        </position>
        <reference-dist>20.0</reference-dist>
        <max-dist>50.0</max-dist>
    </squeal>

    <flap>
        <name>flaps</name>
        <mode>in-transit</mode>
        <path>Sounds/flaps.wav</path>
        <property>surface-positions/flap-pos-norm</property>
        <volume>
            <factor>0.5</factor>
        </volume>
        <position>
            <x>0</x>
            <y>0</y>
            <z>-1</z>
        </position>
        <reference-dist>5.0</reference-dist>
        <max-dist>10.0</max-dist>
    </flap>

    <guns>
        <name>guns</name>
        <mode>looped</mode>
        <path>Aircraft/P47/Sound/50cal.wav</path>
        <property>controls/armament/guns</property>
        <volume>
            <property>controls/armament/guns</property>
        </volume>
        <position>
            <x>0</x>
            <y>0</y>
            <z>-1</z>
        </position>
        <reference-dist>20.0</reference-dist>
        <max-dist>50.0</max-dist>
    </guns>

    <wind>
        <name>wind</name>
        <mode>looped</mode>
        <path>Sounds/wind.wav</path>
        <property>velocities/airspeed-kt</property>
        <volume>
            <property>velocities/airspeed-kt</property>
            <factor>0.0015</factor>
            <min>0.01</min>
            <max>0.15</max>
        </volume>
        <pitch>
            <property>velocities/airspeed-kt</property>
            <factor>0.01</factor>
            <offset>1.25</offset>
        </pitch>
        <position>
            <x>-0.5</x>
            <y>0</y>
            <z>1.25</z>
        </position>
        <reference-dist>1</reference-dist>
        <max-dist>2.0</max-dist>
    </wind>

    <switch>
        <name>click on</name>
        <mode>once</mode>
        <path>Sounds/click.wav</path>
        <condition>
            <property>sim/sound/click</property>
        </condition>
        <volume>
            <offset>0.5</offset>
        </volume>
        <position>
            <x>-0.6</x>
            <y>0</y>
            <z>0.25</z>
        </position>
        <reference-dist>1.0</reference-dist>
        <max-dist>2.0</max-dist>
    </switch>

    <switch>
        <name>click off</name>
        <mode>once</mode>
        <path>Sounds/click.wav</path>
        <condition>
            <not>
                <property>sim/sound/click</property>
            </not>
        </condition>
        <volume>
            <offset>0.5</offset>
        </volume>
        <position>
            <x>-0.6</x>
            <y>0</y>
            <z>0.25</z>
        </position>
        <reference-dist>1.0</reference-dist>
        <max-dist>2.0</max-dist>
    </switch>

</fx>
</PropertyList>